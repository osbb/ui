{
  "name": "ui",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint --ext .js,.jsx .",
    "pretest": "npm run lint --silent",
    "start": "babel-node ./server.js",
    "update-schema": "babel-node ./scripts/updateSchema.js"
  },
  "dependencies": {
    "babel-core": "6.13.2",
    "babel-loader": "6.2.4",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "babel-relay-plugin": "0.9.2",
    "chokidar": "1.6.0",
    "classnames": "2.2.5",
    "express": "4.14.0",
    "express-graphql": "0.5.3",
    "graphql": "0.6.2",
    "graphql-relay": "0.4.2",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-relay": "0.9.2",
    "require-clean": "0.1.3",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-eslint": "^6.1.2",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.0.0",
    "pre-commit": "^1.1.3"
  },
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "airbnb",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  }
}
